@{
    ViewData["Title"] = "New Employee";
}

<h2>New Employee Form</h2>

<form action="a.php">
    <label for="PID">ID:</label><br>
    <input type="number" id="pid" name="pid" required autofocus min="1"><br>
    <label for="fname">First name:</label><br>
    <input type="text" id="fname" name="fname" required maxlength="32"><br>
    <label for="lname">Last name:</label><br>
    <input type="text" id="lname" name="lname" required maxlength="32"><br>
    <label for="phone">Phone Number:</label><br>
    <input type="number" id="phone" name="phone" required maxlength="10"><br>
    <label for="bdate">BirthDate:</label><br>
    <input type="date" id="bdate" name="bdate"><br>
    <label for="submit"> </label><br>

    <input type="submit" value="submit">
</form>
